<VirtualHost *:80>
        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined

        WSGIDaemonProcess surf python-path=/home/choi/Documents/SurfShop:/home/choi/Documents/surf_env/lib/python2.7/site-packages
        WSGIProcessGroup surf
        WSGIScriptAlias / /home/choi/Documents/SurfShop/SurfShop/wsgi.py

        Alias /assests /var/www/html/assests
        <Directory /var/www/html/assests>
                Require all granted
        </Directory>
        <Directory /home/choi/Documents/SurfShop/SurfShop>
                <Files wsgi.py>
                        Require all granted
                </Files>
        </Directory>
</VirtualHost>
